<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Nives Brelih Photography</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    @RenderSection("CustomStyles",required:false)

</head>
<body>
    <div class="navbar navbar-default navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("Nives Brelih Photography", "Index", "Photos", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li>@Html.ActionLink(NivesBrelihPhotography.Resources.Layout.LayoutText.Photos, "Index", "Photos")</li>
                    <li>@Html.ActionLink(NivesBrelihPhotography.Resources.Layout.LayoutText.Albums, "Index", "Albums")</li>
                    <li>@Html.ActionLink(NivesBrelihPhotography.Resources.Layout.LayoutText.Blog, "Index", "Blog")</li>
                    <li>@Html.ActionLink(NivesBrelihPhotography.Resources.Layout.LayoutText.About, "Index", "About")</li>
                </ul>
                @*@Html.Partial("_LoginPartial")*@
                @Html.Partial("_LanguageSelectPartial")
            </div>
           


        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            @*<p>&copy; @DateTime.Now.Year - Nives Brelih Photography</p>*@
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
