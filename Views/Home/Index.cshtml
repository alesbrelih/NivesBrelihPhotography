@using WebGrease.Css.Ast.MediaQuery
@model ICollection<NivesBrelihPhotography.Models.PhotoModels.ViewModels.PhotoView>
@{
    ViewBag.Title = "Welcome";
}
<div class="continue">
    <a href="/Portfolio">
        <div class="logo-container">
            @Html.Partial("_LogoWithText")
        </div>
        @*<span class="glyphicon glyphicon-chevron-right"></span>*@
    </a>
</div>
<div class="carousel slide carousel-container" data-ride="carousel">


    <!-- Wrapper for slides -->
    <div class="carousel-inner" role="listbox">
        @foreach (var photo in Model)
        {
            <div class="item" style="background-image: url('@photo.PhotoUrl'); background-size: cover; background-position: center; background-repeat: no-repeat;">

            </div>
        }

    </div>

</div>
<link href="https://fonts.googleapis.com/css?family=Kaushan+Script" rel="stylesheet">
@section scripts
{
    <script>
        $(function () {
            $(".carousel-inner .item").first().addClass("active");
        });
    </script>
}


<style>
    .logo-container {
        width: 250px;
    }
    .logo-container path {
        fill: #323232 !important;
    }
     .continue>a {
         position: fixed;
         display: flex;
         align-items: center;
         justify-content: flex-end;
         top: 10px;
         right: 10px;
         padding: 20px;
         border-radius: 4px;
         font-family: 'Kaushan Script', cursive;
         color: #323232 !important;
         font-size: 1.7em;
         z-index: 100;
         background-color: white;
         background-color: rgba(255, 255, 255, 0.8);
         box-shadow: 0 0 13px #323232;
         cursor: pointer;
         transition: 150ms all ease-in-out;

     }

    .continue>a:hover {
        color: black !important;
        
        background-color: white;
        text-decoration: none;
    }
    .continue>a:hover path {
        fill: black !important;
    }
    .continue:hover .glyphicon {
        transform: translateX(5px);
    }

    .continue .glyphicon {
        font-size: 1.1em;
        padding-left: 20px;
        transition: 150ms all ease-in-out;
    }

    body {
        padding: 0px !important;
    }

    .navbar {
        display: none !important;
    }

    .carousel-container {
        position: absolute;
        top: 0px;
        left: 0px;
        height: 100vh;
        width: 100vw;
        max-height: 100%;
        max-width: 100%;
    }

    .carousel-container .carousel-inner {
        height: 100%;
    }



    .item {
        width: 100%;
        height: 100%;
    }
</style>