@model IEnumerable<NivesBrelihPhotography.Models.PhotoModels.Photo>

@{
    ViewBag.Title = "Photo";
}
<br>
<div class="row">
    @*category nav bar for photos*@
    <div class="col-md-2">
        <div>
            <ul class="nav nav-pills nav-stacked">
                <li role="presentation">
                    @Html.ActionLink("All", null, null, new {@class = "h5"})
